{
  "name": "copy-lines",
  "displayName": "Copy Lines",
  "description": "Quickly copy code references and blocks with context for AI tools.",
  "version": "0.0.1",
  "publisher": "sunzhongyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joisun/copy-lines.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-lines.copyRefer",
        "title": "Copy Reference",
        "icon": "$(copy)"
      },
      {
        "command": "copy-lines.copyBlock",
        "title": "Copy Block",
        "icon": "$(copy)"
      }
    ],
    "configuration": {
      "title": "Copy Lines",
      "properties": {
        "copy-lines.useAbsolutePath": {
          "type": "boolean",
          "default": false,
          "description": "Use absolute path instead of relative path when copying."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
